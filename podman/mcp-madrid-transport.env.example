# Environment file for Podman Quadlet
# Copy this file to: ~/.config/containers/systemd/mcp-madrid-transport.env
# Then edit with your actual values

# Debug settings
DEBUG=false
DEBUG_LEVEL=info

# EMT API credentials (REQUIRED - get them at https://openapi.emtmadrid.es/)
EMT_CLIENT_ID=your_emt_client_id_here
EMT_PASS_KEY=your_emt_pass_key_here

# API endpoints (optional overrides)
METRO_API_URL=https://serviciosapp.metromadrid.es
EMT_API_URL=https://openapi.emtmadrid.es

# Cache TTL settings (in seconds)
CACHE_TTL_METRO=30
CACHE_TTL_BUS=10
CACHE_TTL_TRAIN=10

# HTTP server settings
MCP_HTTP_PORT=3000
MCP_HTTP_HOST=0.0.0.0

# GTFS data path (inside container - don't change)
GTFS_DATA_PATH=/app/transport-data
